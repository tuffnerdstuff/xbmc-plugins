<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.rtl2.now"
	   name="RTL2 now"
	   version="1.1"
	   provider-name="tuffnerdstuff">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
			 library="default.py">
    	<provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>SuperRTL now : german free stream content</summary>
    <description>Provides access to RTL2 on demand streams. This code has been forked from the code provided on phreekz.de</description>
    <platform>all</platform>
  </extension>
</addon>
